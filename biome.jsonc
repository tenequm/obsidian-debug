{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "extends": ["ultracite"],
  "files": {
    "includes": ["!packages/solana-errors/idl/**/*", "!.claude/**/*"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "style": {
        "noMagicNumbers": "off"
      },
      "nursery": {
        "useConsistentTypeDefinitions": "off"
      },
      "performance": {
        "useTopLevelRegex": "off",
        "noNamespaceImport": "off",
        "noBarrelFile": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/tests/**/*.ts", "**/tests/**/*.tsx"],
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off"
          }
        }
      }
    }
  ]
}
