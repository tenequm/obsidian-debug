{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["mocha", "node"]
  },
  "include": ["./tests/**/*.ts", "./target/types/**/*.ts"],
  "exclude": ["node_modules"]
}
